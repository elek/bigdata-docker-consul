dfs.namenode.kerberos.principal: nn/${GATEWAY_HOST}@EXAMPLE.COM
dfs.namenode.keytab.file: /opt/hadoop/etc/hadoop/nn.service.keytab

dfs.datanode.kerberos.principal: dn/${GATEWAY_HOST}@EXAMPLE.COM
dfs.datanode.keytab.file: /opt/hadoop/etc/hadoop/dn.service.keytab

dfs.web.authentication.kerberos.principal: HTTP/${GATEWAY_HOST}@EXAMPLE.COM
dfs.web.authentication.kerberos.keytab: /opt/hadoop/etc/hadoop/HTTP.service.keytab

dfs.block.access.token.enable: true
dfs.block.access.key.update.interval: 5
dfs.block.access.token.lifetime: 10
dfs.data.transfer.protection: authentication
dfs.http.policy: HTTPS_ONLY

dfs.namenode.delegation.key.update-interval: 60000
dfs.namenode.delegation.token.max-lifetime: 120000
dfs.namenode.delegation.token.renew-interval: 60000
